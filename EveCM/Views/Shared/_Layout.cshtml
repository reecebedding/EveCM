<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - evecm</title>


    <link rel="stylesheet" asp-href-include="~/css/vendor.*.css" />
    <link rel="stylesheet" asp-href-include="~/css/app.*.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">evecm</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">

                    </li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="characterDropDown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <img src="@User.Identity.PortraitUrl(EveImageHelper.CharacterAvatarSize.Thirty_Two)" /> @User.Identity.Name <span class="caret"></span>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="characterDropDown">
                                <a asp-controller="Authentication" asp-action="Logout" class="dropdown-item">Logout</a>
                            </div>
                        </li>
                    </ul>
                }
                else
                {
                    <p class="nav navbar-text navbar-right">
                        <a asp-controller="Authentication" asp-action="Login">
                            <img src="~/images/eve-sso-login-black-small.png" alt="login-with-eve" />
                        </a>
                    </p>
                }
            </div>
        </nav>
    </header>

    <main role="main" class="container">
        <div>
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p class="float-right"><a href="#">Back to top</a></p>
            <p>&copy; 2018 - evecm</p>
        </footer>
    </main>

    <script asp-src-include="~/js/vendor.*.js" asp-append-version="true"></script>
    <script asp-src-include="~/js/app.*.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
