
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - evecm</title>

    <link rel="stylesheet" asp-href-include="~/css/vendor.*.css" />
    <link rel="stylesheet" asp-href-include="~/css/app.*.css" />
</head>
<body>

    <nav class="side-navbar">
        <div class="side-navbar-wrapper">
            <div class="sidenav-header d-flex align-items-center justify-content-center">
                <div class="sidenav-header-inner text-center">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <img src="@User.Identity.PortraitUrl()" alt="person" class="img-fluid rounded-circle">
                        <h2 class="h5">@User.Identity.Name</h2>
                        <a asp-controller="Auth" asp-action="Logout"><span class="text-secondary">Logout</span> <i class="fa fa-sign-out"></i></a>
                    }
                    else
                    {
                        <img src="~/images/member.png" alt="person" class="img-fluid rounded-circle">
                        <h2 class="h5">Guest</h2>
                        <a asp-controller="Auth" asp-action="Login"><span class="text-secondary">Login</span> <i class="fa fa-sign-in"></i></a>
                    }
                </div>
                <div class="sidenav-header-logo">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Home" asp-action="Index" class="brand-small text-center">
                            <img src="@User.Identity.PortraitUrl()" alt="person" class="img-fluid rounded-circle">
                        </a>
                        <a asp-controller="Auth" asp-action="Logout" class="brand-small text-center"><i class="fa fa-sign-out"></i></a>
                    }
                    else
                    {
                        <a asp-controller="Home" asp-action="Index" class="brand-small text-center">
                            <img src="~/images/member.png" alt="person" class="img-fluid rounded-circle">
                        </a>
                        <a asp-controller="Auth" asp-action="Login" class="brand-small text-center"><i class="fa fa-sign-in"></i></a>
                    }
                </div>
            </div>
            <div class="main-menu">
                <ul id="side-main-menu" class="side-menu list-unstyled">
                    <li><a asp-controller="Home" asp-action="Index"><img src="~/images/container.png"> Home</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="page">
        <header class="header">
            <nav class="navbar">
                <div class="container-fluid">
                    <div class="navbar-holder d-flex align-items-center justify-content-between">
                        <div class="navbar-header">
                            <a id="toggle-btn" href="#" class="menu-btn"><i class="fa fa-align-justify"> </i></a><a asp-controller="Home" asp-action="Index" class="navbar-brand">
                                <div class="brand-text d-none d-md-inline-block"><strong class="text-primary">EveCM</strong></div>
                            </a>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <section class="section-padding">
            <div class="container-fluid">
                <div class="row">
                    @RenderBody()
                </div>
            </div>
        </section>
    </div>

    <script asp-src-include="~/js/vendor.*.js" asp-append-version="true"></script>
    <script asp-src-include="~/js/app.*.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>