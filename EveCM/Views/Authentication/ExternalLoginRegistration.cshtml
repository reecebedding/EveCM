@model CharacterDetails
@{
    ViewData["Title"] = "Associate Character";
}


<div class="row container">
    <div class="col-md-12">
        <section>
            <div class="row">
                <h1><img src="@EveImageHelper.GetCharacterAvatar(Model.CharacterID.ToString(), EveImageHelper.CharacterAvatarSize.Sixty_Four)" class="rounded-circle" /> @Model.CharacterName is not associated with an account.</h1>
            </div>
            <div class="form-row mt-3">
                <h4>How would you like to associate the character?</h4>
            </div>
            <div class="row mt-3">
                <div class="col-md-3">
                    <a asp-action="Login" asp-controller="Authentication" class="btn btn-primary">
                        Login with existing account
                    </a>
                </div>
                <div class="col-md-3">
                    <a asp-action="Register" asp-controller="Authentication" class="btn btn-primary">
                        Register a new account
                    </a>
                </div>
            </div>
        </section>
    </div>
</div>